@model BookViewModel
<section>
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6 mx-auto">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" height="450" src="~/Images/Covers/book-covers-big-2019101610.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" height="450" src="~/Images/Covers/cozy-mystery-book-covers.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" height="450" src="~/Images/Covers/The-book-of-chaos.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6 mx-auto">
            <div class="card-body">
                <h3 class="card-title text-uppercase">@Model.Title</h3>
                <p class="card-text"><b>By</b> : <a class="text-decoration-none text-primary text-capitalize">@Model.Author</a></p>
                <p class="card-text"><b>Book Description : </b> @Model.Description </p>
                <a class="btn btn-outline-primary" href="#">Read More </a>
            </div>
            <br/>
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <td><b>Total Pages</b></td>
                        <td>@Model.NumberOfPages</td>
                    </tr>
                    <tr>
                        <td><b>Language</b></td>
                        <td>English</td>
                    </tr>
                    <tr>
                        <td><b>Categoery</b></td>
                        <td>General</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</section>